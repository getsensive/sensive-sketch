{
  "name": "Sketch Sync",
  "description": "Create a collaboration hub for your Sketch files.",
  "author": "Sensive",
  "version": "0.3.1",
  "compatibleVersion": 3,
  "bundleVersion": 1,
  "icon": "icon.png",

  "commands": [
    {
      "name": "Toggle Syncing For This Document",
      "script": "toggleSyncing.js",
      "identifier": "toggleSyncing",
      "handler": "toggleSyncing"
    },
    {
      "name": "Your Account",
      "script": "setup.js",
      "identifier": "setup",
      "handler": "setup"
    },
    {
      "script": "actions.js",
      "handlers": {
        "actions": {
          "DocumentSaved": "onDocumentSaved",
          "ArtboardChanged": "onArtboardChanged",
          "OpenDocument": "onOpenDocument"
        }
      }
    },
    {
      "name": "About Us",
      "script": "sensiveLinks.js",
      "identifier": "aboutUsLink",
      "handler": "aboutUsLink"
    },
    {
      "name": "Terms of Service",
      "script": "sensiveLinks.js",
      "identifier": "termsOfServiceLink",
      "handler": "termsOfServiceLink"
    },
    {
      "name": "Privacy Policy",
      "script": "sensiveLinks.js",
      "identifier": "privacyPolicyLink",
      "handler": "privacyPolicyLink"
    }
  ],
  
  "menu": {
    "title": "ðŸ›Ž Sensive",
    "items": [
      "toggleSyncing",
      "-",
      "setup",
      {
        "title": "About Sensive",
        "items": [
          "aboutUsLink",
          "termsOfServiceLink",
          "privacyPolicyLink"
        ]
      }
    ]
  }
}
